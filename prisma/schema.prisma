// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:bcd127@localhost:3306/db_teajuda_aa"
}

model Produto {
  id            Int            @id @default(autoincrement())
  nome          String
  preco         Float
  estoque       Int
  fabricante    Fabricante     @relation(fields: [fabricanteId], references: [id], onDelete: Cascade)
  fabricanteId  Int
  categoria     Categoria      @relation(fields: [categoriaId], references: [id], onDelete: Cascade)
  categoriaId   Int
  fichaTecnicas FichaTecnica[] @relation("ProdutoFichaTecnica")
  estoques      Estoque[]      @relation("ProdutoEstoque")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Fabricante {
  id          Int       @id @default(autoincrement())
  nome        String    @unique
  paisorigem  String
  produtos    Produto[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Categoria {
  id          Int       @id @default(autoincrement())
  nome        String    @unique
  produtos    Produto[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model FichaTecnica {
  id              Int       @id @default(autoincrement())
  produto         Produto   @relation("ProdutoFichaTecnica", fields: [produtoId], references: [id], onDelete: Cascade)
  produtoId       Int
  especificacao   String
  valor           String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([produtoId])
}

model Estoque {
  id              Int       @id @default(autoincrement())
  produto         Produto   @relation("ProdutoEstoque", fields: [produtoId], references: [id], onDelete: Cascade)
  produtoId       Int
  quantidadeAtual Int
  estoqueMinimo   Int
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([produtoId])
}